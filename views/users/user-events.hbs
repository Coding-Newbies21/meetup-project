<h1 class="view-title">Events you are promoting!</h1>

{{#each eventsArr}}
<div class="list-display">
  <div class="event-list">
    <p>
      {{this.title}}
    </p>
    <img class="event-img" src="{{this.image}}">
    <a href="/events/{{this._id}}">More details</a>
    <br></br>
    <form action="/events/{{this._id}}/delete" method="POST" class="delete-btn">
       <button>Delete</button>
    </form>
  </div>
</div>
{{/each}}

