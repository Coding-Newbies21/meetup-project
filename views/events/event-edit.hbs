<div class="container">
  <h3>Edit Event</h3>
  <form action="/events/{{this._id}}/edit" enctype="multipart/form-data" method="post">
    <label> Title</label>
    <input type="text" class="text-input" name="title" value="{{this.title}}" />

    <label> Category</label>
    <input type="text" class="text-input" name="category" min="1" max="10" value="{{this.category}}"/>

    <label> Description</label>
    <br>
    <textarea name="description" class="text-area" cols="60" rows="3">{{this.description}}</textarea>
    <br>
    <label>Image</label>
    <br>
    <input type="file" class="text-file" name="image" value="{{this.image}}" />
    <br>
    <button class="create-btn" type="submit"> Save </button>
    <button class="cancel-btn" type="submit"><a href="/user-profile">Cancel</a></button>
  </form>
</div>